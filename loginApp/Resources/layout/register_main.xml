<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundimage"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/linearLayoutAndroidPadding"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/textViewAndroidLayoutMarginTop"
                android:textStyle="bold"
                android:id="@+id/registerTextView"
                android:textSize="@dimen/textViewAndroidTextSize"
                android:text="@string/RegisterTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/textViewAndroidTextSize2"
                android:layout_marginTop="@dimen/textViewAndroidMarginTop"
                android:id="@+id/alreadyHaveAccountTextView"
                android:layout_below="@id/registerTextView"
                android:text="@string/AlreadyHaveAnAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingLeft="@dimen/textViewAndroidMarginTop"
                android:id="@+id/loginYourAccountTextView"
                android:textStyle="bold"
                android:textSize="@dimen/textViewAndroidTextSize2"
                android:layout_marginTop="@dimen/textViewAndroidMarginTop"
                android:textColor="@color/pinkishsomething"
                android:layout_toRightOf="@+id/alreadyHaveAccountTextView"
                android:clickable="true"
                android:layout_below="@+id/registerTextView"
                android:text="@string/LoginYourAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <EditText
            android:layout_marginTop="@dimen/linearLayoutAndroidPadding"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:padding="@dimen/editTextAndroidPadding"
            android:background="@drawable/custom_et"
            android:drawablePadding="@dimen/editTextAndroidDrawablePadding"
            android:drawableLeft="@drawable/person"
            android:hint="@string/EnterNameOfUser"
            android:textSize="@dimen/editTextAndroidTextSize3"
            android:id="@+id/nameOfUserEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextAndroidLayoutHeight"/>
        <EditText
            android:textSize="@dimen/editTextAndroidTextSize3"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:padding="@dimen/editTextAndroidPadding"
            android:layout_marginTop="@dimen/editTextAndroidLayoutMarginTop"
            android:background="@drawable/custom_et"
            android:drawablePadding="@dimen/editTextAndroidDrawablePadding"
            android:drawableLeft="@drawable/emaill"
            android:hint="@string/EnterEmailAddress"
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextAndroidLayoutHeight"/>
        <EditText
            android:textSize="@dimen/editTextAndroidTextSize3"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:padding="@dimen/editTextAndroidPadding"
            android:layout_marginTop="@dimen/editTextAndroidLayoutMarginTop"
            android:background="@drawable/custom_et"
            android:drawablePadding="@dimen/editTextAndroidDrawablePadding"
            android:drawableLeft="@drawable/person"
            android:hint="@string/EnterUserNameTextView"
            android:id="@+id/userNameEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextAndroidLayoutHeight"/>
        <EditText
            android:layout_marginBottom="@dimen/editTextAndroidPadding"
            android:textSize="@dimen/editTextAndroidTextSize3"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:padding="@dimen/editTextAndroidPadding"
            android:layout_marginTop="@dimen/editTextAndroidLayoutMarginTop"
            android:background="@drawable/custom_et"
            android:drawablePadding="@dimen/editTextAndroidDrawablePadding"
            android:drawableLeft="@drawable/keyy"
            android:hint="@string/EnterPasswordTextView"
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextAndroidLayoutHeight"/>
        <com.google.android.material.button.MaterialButton
            android:textAllCaps="false"
            android:backgroundTint="@color/colorButton"
            app:cornerRadius="@dimen/editTextAndroidLayoutMarginTop"
            android:id="@+id/registerButton"
            android:layout_marginTop="@dimen/buttonLayoutMarginTop"
            android:textSize="@dimen/buttonTextSize"
            android:layout_gravity="center"
            android:text="@string/RegisterTextView"
            android:layout_width="@dimen/buttonLayoutWidth"
            android:layout_height="@dimen/buttonLayoutHeight"/>
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/editTextAndroidTextSize3"
            android:layout_marginTop="@dimen/textViewLayoutMarginTop"
            android:gravity="center"
            android:id="@+id/orRegisterWithTextView"
            android:text="@string/OrRegisterWith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/editTextAndroidLayoutMarginTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginRight="@dimen/editTextAndroidPadding"
                android:id="@+id/facebookIconImageButton"
                android:background="@null"
                android:layout_width="wrap_content"
                android:src="@drawable/facebook"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:layout_toRightOf="@id/facebookIconImageButton"
                android:id="@+id/googleIconImageButton"
                android:background="@null"
                android:layout_width="wrap_content"
                android:src="@drawable/google"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
