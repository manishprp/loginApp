<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="@drawable/backgroundimage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/linearLayoutAndroidPadding"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="@dimen/textViewLayoutMarginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:id="@+id/loginTextTextView"
                android:textSize="@dimen/textViewAndroidTextSize"
                android:text="@string/LoginTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/textViewAndroidTextSize2"
                android:layout_marginTop="@dimen/textViewAndroidMarginTop"
                android:id="@+id/haveNoAccountTextView"
                android:layout_below="@+id/loginTextTextView"
                android:text="@string/DontHaveAccountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingLeft="@dimen/textViewAndroidMarginTop"
                android:textStyle="bold"
                android:textSize="@dimen/textViewAndroidTextSize2"
                android:id="@+id/haveNoAccountClickableTextView"
                android:layout_marginTop="@dimen/textViewAndroidMarginTop"
                android:textColor="@color/pinkishsomething"
                android:layout_toRightOf="@+id/haveNoAccountTextView"
                android:clickable="true"
                android:layout_below="@+id/loginTextTextView"
                android:text="@string/CreateYourAccountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <Space
            android:layout_marginTop="@dimen/textViewLayoutMarginTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textViewAndroidLayoutMarginTop"/>
        <EditText
            android:textSize="@dimen/editTextAndroidTextSize3"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:padding="@dimen/editTextAndroidPadding"
            android:layout_marginTop="@dimen/editTextAndroidLayoutMarginTop"
            android:background="@drawable/custom_et"
            android:drawablePadding="@dimen/editTextAndroidDrawablePadding"
            android:drawableLeft="@drawable/person"
            android:hint="@string/EnterUserNameTextView"
            android:id="@+id/loginUserNameEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextAndroidLayoutHeight"/>
        <EditText
            android:textSize="@dimen/editTextAndroidTextSize3"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:padding="@dimen/editTextAndroidPadding"
            android:layout_marginTop="@dimen/editTextAndroidLayoutMarginTop"
            android:background="@drawable/custom_et"
            android:drawablePadding="@dimen/editTextAndroidDrawablePadding"
            android:drawableStart="@drawable/keyy"
            android:hint="@string/EnterPasswordTextView"
            android:id="@+id/loginPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editTextAndroidLayoutHeight"/>
        <TextView
            android:imeOptions="actionNone"
            android:textStyle="bold"
            android:textSize="@dimen/textViewAndroidTextSize2"
            android:layout_marginTop="@dimen/editTextAndroidPadding"
            android:id="@+id/forgotPasswordTextView"
            android:layout_gravity="right"
            android:text="@string/ForgotPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:textAllCaps="false"
            android:backgroundTint="@color/colorButton"
            android:shadowColor="@color/colorBlack"
            app:cornerRadius="@dimen/editTextAndroidLayoutMarginTop"
            android:textSize="@dimen/buttonTextSize"
            android:id="@+id/loginButton"
            android:layout_marginTop="@dimen/textViewAndroidLayoutMarginTop"
            android:layout_gravity="center"
            android:text="@string/LoginTextView"
            android:layout_width="@dimen/buttonLayoutWidth"
            android:layout_height="@dimen/buttonLayoutHeight"/>
        <TextView
            android:textSize="@dimen/editTextAndroidTextSize3"
            android:layout_marginTop="@dimen/textViewLayoutMarginTop"
            android:gravity="center"
            android:id="@+id/orLoginWithTextView"
            android:text="@string/OrLoginWithTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/editTextAndroidLayoutMarginTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginRight="@dimen/editTextAndroidPadding"
                android:id="@+id/facebookIconImageButton"
                android:background="@null"
                android:layout_width="wrap_content"
                android:src="@drawable/facebook"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:layout_toRightOf="@id/facebookIconImageButton"
                android:id="@+id/googleIconImageButton"
                android:background="@null"
                android:layout_width="wrap_content"
                android:src="@drawable/google"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>


